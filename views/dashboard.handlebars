{{#each blogDataClear}}
  <div class="post">
    <h2 class="post-title">{{this.title}}</h2>
    <p class="post-content">{{this.contents}}</p>
    <p>Created by: {{this.user.name}}</p>

    <h3>Comments:</h3>
      {{#each comments as |comment| }}
      <div class="comment">
        <p>{{comment.comment_text}}</p>
        <p>Posted by: {{this.user.name}}</p>
      </div>
    {{/each}}
  </div>
{{/each}}
 {{!--  --}}

<script src="/js/comments.js"></script>
<script src="/js/delete.js"></script>
</body>


